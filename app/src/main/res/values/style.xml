<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="card_style">
        <item name="cardElevation">@dimen/elevation</item>
        <item name="cardCornerRadius">30dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="cardBackgroundColor">@color/secondBackground</item>
    </style>

    <style name="title_style">
        <item name="android:textColor">@color/mainText</item>
        <item name="android:textSize">@dimen/title</item>
        <item name="fontFamily">sans-serif-black</item>
    </style>
    
    <style name="FullScreenDialogStyle" parent="Theme.AppCompat.DayNight">
        <item name="colorOnPrimary">@color/mainBackground</item>
        <item name="colorPrimaryDark">@color/secondBackground</item>

        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>

        <item name="android:windowEnterAnimation">@android:anim/slide_in_left</item>
        <item name="android:windowExitAnimation">@android:anim/slide_out_right</item>


    </style>


</resources>